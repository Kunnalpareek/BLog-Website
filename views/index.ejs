<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="styles/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>

<body>
    <div id="header">
        <nav class="navbar bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <h4>Unsigned Blog</h4>
                </a>
                <button type="button" class="btn btn-outline-secondary" id="createBtn" href="#post-form"
                    onclick="myFunction()">Create Post</button>
            </div>
        </nav>
    </div>

    <!-- layout in grid form -->
    <div id="home" class="container-fluid">
        <!-- post creation form -->
        <div class="row">

            <!-- posts -->
            <div id="posts" class="col-8 col-md-7 order-sm-1 order-2">
                <% if(locals.posts && posts.length>0){ %>
                    <% posts.forEach((element,index)=> { %>
                        <% if(element.title.length>0 && element.post.length>0){ %>
                            <div class="post" id=<%=index%>>
                                <article>
                                    <i>
                                        <%= element.timeStamp %>
                                    </i>
                                    <h2>
                                        <%= element.title %>
                                    </h2>
                                    <p>
                                        <%= element.post %>
                                    </p>
                                </article>
                                <form action="/delete" method="post">
                                    <input type="hidden" name="id" value=<%=index%>>
                                    <button type="submit" class="btn btn-dark">Delete</button>
                                </form>
                                <form action="/edit" method="post">
                                    <input type="hidden" name="id" value=<%=index%>>
                                    <button type="submit" class="btn btn-light">Edit</button>
                                </form>
                            </div>
                            <% } %>
                                <% }) %>
                                    <% }else{ %>
                                        <p>No posts yet</p>
                                        <% } %>
            </div>



            <div id="post-form" class="col-4 col-md-5 order-1  justify-content-center ">
                <div id="form" class="col-9 ">
                    <form action="/submit" method="post" class="postform">
                        <label for="title" class="post-title">Title:</label>
                        <input type="text" name="title" id="title">
                        <label for="paragraph">Post:</label>
                        <textarea name="post" id="paragraph" cols="30" rows="4"></textarea>
                        <button type="submit" id="submit-post">Submit</button>
                    </form>
                </div>
            </div>

        </div>
    </div>

    <div id="footer">
        <footer>
            <p>Site developed with ‚ù§ by Kunnal Pareek</p>
            <div class="icons">
                <i class="fa-brands fa-github fa-xl icon"></i>
                <i class="fa-brands fa-linkedin fa-xl icon"></i>
            </div>
        </footer>
    </div>

    <script src="scripts/script.js">  </script>
    <script src="https://kit.fontawesome.com/c14ebae8ff.js" crossorigin="anonymous"></script>
</body>

</html>